<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_color"
    tools:ignore="RtlSymmetry" >

    <!-- Back Drop -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/back_drop_container">

        <!-- Back Button -->
        <androidx.appcompat.widget.AppCompatImageView
            style="@style/ActionButtonStyle.Dark"
            android:id="@+id/btn_back"
            android:background="@drawable/ripple_action_button_dark"
            app:srcCompat="@drawable/outline_arrow_back_24"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Title -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:id="@+id/tv_title"
            android:text="수정하기"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/top_bar_guideline"
            app:layout_constraintStart_toEndOf="@id/btn_back"/>

        <!-- Delete Button -->
        <androidx.appcompat.widget.AppCompatImageView
            style="@style/ActionButtonStyle.Light"
            android:id="@+id/btn_delete"
            app:srcCompat="@drawable/delete_icon_320"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_toggle_back_drop"/>

        <!-- Back Drop Open Button -->
        <androidx.constraintlayout.utils.widget.ImageFilterView
            style="@style/ActionButtonStyle.Light"
            android:src="@drawable/outline_menu_open_24"
            android:id="@+id/btn_toggle_back_drop"
            android:background="@drawable/ripple_action_button_light"
            app:altSrc="@drawable/outline_close_24"
            app:crossfade="0"
            app:overlay="false"
            app:tint="@color/white"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/top_bar_guideline"
            app:layout_constraintGuide_begin="?attr/actionBarSize"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/top_bar_guideline">

            <com.google.android.material.checkbox.MaterialCheckBox
                style="@style/EditAccountActivity.CheckBox"
                android:id="@+id/check_box_user_id"
                android:text="아이디"
                android:background="?attr/selectableItemBackground"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                style="@style/EditAccountActivity.CheckBox"
                android:id="@+id/check_box_user_password"
                android:text="비밀번호"
                android:background="?attr/selectableItemBackground"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                style="@style/EditAccountActivity.CheckBox"
                android:id="@+id/check_box_user_password_pin4"
                android:text="비밀번호 (PIN4)"
                android:background="?attr/selectableItemBackground"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                style="@style/EditAccountActivity.CheckBox"
                android:id="@+id/check_box_user_password_pin6"
                android:text="비밀번호 (PIN6)"
                android:background="?attr/selectableItemBackground"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                style="@style/EditAccountActivity.CheckBox"
                android:id="@+id/check_box_user_password_pattern"
                android:text="패턴 비밀번호"
                android:background="?attr/selectableItemBackground"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                style="@style/EditAccountActivity.CheckBox"
                android:id="@+id/check_box_memo"
                android:text="메모"
                android:background="?attr/selectableItemBackground"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Sheet -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottom_sheet"
        android:focusable="true"
        android:animateLayoutChanges="true"
        android:nestedScrollingEnabled="true"
        app:shapeAppearanceOverlay="@style/BottomSheet.Cut.TopRight"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:behavior_peekHeight="500dp"
        app:behavior_fitToContents="false"
        app:behavior_expandedOffset="?attr/actionBarSize"
        app:behavior_hideable="false"
        app:behavior_draggable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll_view">

            <!-- Bottom Sheet Contents Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 그룹 아이콘 -->
                <com.jojo.android.mwodeola.presentation.common.SquircleIcon
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="48dp"
                    android:id="@+id/group_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 그룹명 -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:id="@+id/tv_account_group_name"
                    android:text="그룹명"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/group_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 즐겨찾기 아이콘 -->
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="6dp"
                    android:padding="3dp"
                    android:id="@+id/iv_favorite"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/round_star_border_achromatic_color_36dp"
                    app:altSrc="@drawable/round_star_yellow_600_36dp"
                    app:overlay="false"
                    app:layout_constraintTop_toTopOf="@id/tv_account_group_name"
                    app:layout_constraintBottom_toBottomOf="@id/tv_account_group_name"
                    app:layout_constraintStart_toEndOf="@id/tv_account_group_name"/>

                <!-- 웹 사이트: ImageView -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="12dp"
                    android:padding="10dp"
                    android:id="@+id/iv_web_url"
                    app:srcCompat="@drawable/web_icon"
                    app:tint="@color/text_view_text_default_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_account_group_name"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- 웹 사이트: TextInputLayout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="12dp"
                    android:id="@+id/edt_layout_web_url"
                    android:padding="0dp"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false"
                    app:boxBackgroundColor="@color/transparent"
                    app:errorTextColor="@color/error_color"
                    app:errorIconTint="@color/error_color"
                    app:boxStrokeErrorColor="@color/error_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_account_group_name"
                    app:layout_constraintStart_toEndOf="@id/iv_web_url"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="0dp"
                        android:id="@+id/edt_web_url"
                        android:hint="https://"
                        android:inputType="textUri"
                        android:textColorHint="@color/gray500"
                        android:background="@color/transparent"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Divider -->
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:id="@+id/account_group_divider"
                    android:visibility="visible"
                    app:dividerThickness="1dp"
                    app:dividerColor="@color/app_theme_color_a30"
                    app:layout_constraintTop_toBottomOf="@id/iv_web_url"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:id="@+id/card_view_for_sns_detail"
                    android:visibility="gone"
                    android:alpha="0.8"
                    app:cardBackgroundColor="@color/material_light_blue_50"
                    app:cardElevation="0dp"
                    app:shapeAppearanceOverlay="@style/EditAccountActivity.CardView.CutStyle"
                    app:layout_constraintTop_toTopOf="@id/account_detail_container"
                    app:layout_constraintBottom_toBottomOf="@id/account_detail_container"/>

                <com.jojo.android.mwodeola.presentation.common.SquircleIcon
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="28dp"
                    android:id="@+id/sns_icon"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/card_view_for_sns_detail"
                    app:layout_constraintBottom_toTopOf="@id/card_view_for_sns_detail"
                    app:layout_constraintStart_toStartOf="@id/card_view_for_sns_detail"/>

                <!-- Account Details Container -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    app:layout_goneMarginTop="60dp"
                    android:orientation="vertical"
                    android:id="@+id/account_detail_container"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:layout_constraintTop_toBottomOf="@id/account_group_divider"
                    app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_contents_bottom_guideline">

                    <!-- User Id: Container -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/EditAccountActivity.Container"
                        android:id="@+id/user_id_container">

                        <!-- User Id: CardView -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.CardView"
                            android:id="@+id/user_id_card_view"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <!-- User Id: Remove Button -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.RemoveButton"
                            android:id="@+id/user_id_container_remove_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/outline_close_24"
                                app:tint="@color/white"/>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- User Id: Icon -->
                        <androidx.appcompat.widget.AppCompatImageView
                            style="@style/EditAccountActivity.Icon"
                            android:id="@+id/user_id_icon"
                            app:srcCompat="@drawable/round_face_black_48dp"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintTop_toTopOf="@id/user_id_card_view"
                            app:layout_constraintBottom_toTopOf="@id/user_id_edt_layout"
                            app:layout_constraintStart_toStartOf="@id/user_id_card_view"/>

                        <!-- User Id: Label -->
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/EditAccountActivity.Label"
                            android:id="@+id/user_id_label"
                            android:text="아이디"
                            app:layout_constraintBottom_toBottomOf="@id/user_id_icon"
                            app:layout_constraintStart_toEndOf="@id/user_id_icon"/>

                        <!-- User Id: TextInputLayout -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/EditAccountActivity.TextInputLayout.ExposedDropdownMenu"
                            android:id="@+id/user_id_edt_layout"
                            app:endIconMode="clear_text"
                            app:layout_constraintTop_toBottomOf="@id/user_id_icon"
                            app:layout_constraintBottom_toBottomOf="@id/user_id_card_view"
                            app:layout_constraintStart_toStartOf="@id/user_id_card_view"
                            app:layout_constraintEnd_toEndOf="@id/user_id_card_view">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                style="@style/EditAccountActivity.TextInputEditText"
                                android:id="@+id/user_id_edt"
                                android:hint="아이디 입력"
                                android:inputType="textWebEmailAddress"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- User Password: Container -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/EditAccountActivity.Container"
                        android:id="@+id/user_password_container">

                        <!-- User Password: CardView -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.CardView"
                            android:id="@+id/user_password_card_view"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <!-- User Password: Remove Button -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.RemoveButton"
                            android:id="@+id/user_password_container_remove_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/outline_close_24"
                                app:tint="@color/white"/>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- User Password: Icon -->
                        <androidx.appcompat.widget.AppCompatImageView
                            style="@style/EditAccountActivity.Icon"
                            android:id="@+id/user_password_icon"
                            app:srcCompat="@drawable/outline_password_black_48"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintTop_toTopOf="@id/user_password_card_view"
                            app:layout_constraintBottom_toTopOf="@id/user_password_edt_layout"
                            app:layout_constraintStart_toStartOf="@id/user_password_card_view"/>

                        <!-- User Password: Label -->
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/EditAccountActivity.Label"
                            android:id="@+id/user_password_label"
                            android:text="비밀번호"
                            app:layout_constraintBottom_toBottomOf="@id/user_password_icon"
                            app:layout_constraintStart_toEndOf="@id/user_password_icon"/>

                        <!-- User Password: TextInputLayout -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/EditAccountActivity.TextInputLayout"
                            android:id="@+id/user_password_edt_layout"
                            app:layout_constraintTop_toBottomOf="@id/user_password_icon"
                            app:layout_constraintBottom_toBottomOf="@id/user_password_card_view"
                            app:layout_constraintStart_toStartOf="@id/user_password_card_view"
                            app:layout_constraintEnd_toEndOf="@id/user_password_card_view">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/EditAccountActivity.TextInputEditText"
                                android:id="@+id/user_password_edt"
                                android:hint="비밀번호 입력"
                                android:inputType="textWebPassword"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- User Password PIN4: Container -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/EditAccountActivity.Container"
                        android:id="@+id/user_password_pin4_container">

                        <!-- User Password PIN4: CardView -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.CardView"
                            android:id="@+id/user_password_pin4_card_view"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <!-- User Password PIN4: Remove Button -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.RemoveButton"
                            android:id="@+id/user_password_pin4_container_remove_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/outline_close_24"
                                app:tint="@color/white"/>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- User Password PIN4: Icon -->
                        <androidx.appcompat.widget.AppCompatImageView
                            style="@style/EditAccountActivity.Icon"
                            android:id="@+id/user_password_pin4_icon"
                            app:srcCompat="@drawable/password_pin_icon2"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintTop_toTopOf="@id/user_password_pin4_card_view"
                            app:layout_constraintBottom_toTopOf="@id/user_password_pin4_edt_layout"
                            app:layout_constraintStart_toStartOf="@id/user_password_pin4_card_view"/>

                        <!-- User Password PIN4: Label -->
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/EditAccountActivity.Label"
                            android:id="@+id/user_password_pin4_label"
                            android:text="비밀번호 (PIN4, 숫자 4자리)"
                            app:layout_constraintBottom_toBottomOf="@id/user_password_pin4_icon"
                            app:layout_constraintStart_toEndOf="@id/user_password_pin4_icon"/>

                        <!-- User Password PIN4: TextInputLayout -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/EditAccountActivity.TextInputLayout"
                            android:id="@+id/user_password_pin4_edt_layout"
                            app:layout_constraintTop_toBottomOf="@id/user_password_pin4_icon"
                            app:layout_constraintBottom_toBottomOf="@id/user_password_pin4_card_view"
                            app:layout_constraintStart_toStartOf="@id/user_password_pin4_card_view"
                            app:layout_constraintEnd_toEndOf="@id/user_password_pin4_card_view">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/EditAccountActivity.TextInputEditText"
                                android:id="@+id/user_password_pin4_edt"
                                android:hint="비밀번호 숫자 4자리 입력"
                                android:inputType="numberPassword"
                                android:maxLength="4"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- User Password PIN6: Container -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/EditAccountActivity.Container"
                        android:id="@+id/user_password_pin6_container">

                        <!-- User Password PIN6: CardView -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.CardView"
                            android:id="@+id/user_password_pin6_card_view"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <!-- User Password PIN6: Remove Button -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.RemoveButton"
                            android:id="@+id/user_password_pin6_container_remove_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/outline_close_24"
                                app:tint="@color/white"/>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- User Password PIN6: Icon -->
                        <androidx.appcompat.widget.AppCompatImageView
                            style="@style/EditAccountActivity.Icon"
                            android:id="@+id/user_password_pin6_icon"
                            app:srcCompat="@drawable/password_pin_icon2"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintTop_toTopOf="@id/user_password_pin6_card_view"
                            app:layout_constraintBottom_toTopOf="@id/user_password_pin6_edt_layout"
                            app:layout_constraintStart_toStartOf="@id/user_password_pin6_card_view"/>

                        <!-- User Password PIN6: Label -->
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/EditAccountActivity.Label"
                            android:id="@+id/user_password_pin6_label"
                            android:text="비밀번호 (PIN6, 숫자 6자리)"
                            app:layout_constraintBottom_toBottomOf="@id/user_password_pin6_icon"
                            app:layout_constraintStart_toEndOf="@id/user_password_pin6_icon"/>

                        <!-- User Password PIN6: TextInputLayout -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/EditAccountActivity.TextInputLayout"
                            android:layout_height="60dp"
                            android:id="@+id/user_password_pin6_edt_layout"
                            app:layout_constraintTop_toBottomOf="@id/user_password_pin6_icon"
                            app:layout_constraintBottom_toBottomOf="@id/user_password_pin6_card_view"
                            app:layout_constraintStart_toStartOf="@id/user_password_pin6_card_view"
                            app:layout_constraintEnd_toEndOf="@id/user_password_pin6_card_view">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/EditAccountActivity.TextInputEditText"
                                android:id="@+id/user_password_pin6_edt"
                                android:hint="비밀번호 숫자 6자리 입력"
                                android:inputType="numberPassword"
                                android:maxLength="6"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- User Password PATTERN: Container -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/EditAccountActivity.Container"
                        android:id="@+id/user_password_pattern_container">

                        <!-- User Password PATTERN: CardView -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.CardView"
                            android:id="@+id/user_password_pattern_card_view"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <!-- User Password PATTERN: Remove Button -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.RemoveButton"
                            android:id="@+id/user_password_pattern_container_remove_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/outline_close_24"
                                app:tint="@color/white"/>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- User Password PATTERN: Icon -->
                        <androidx.appcompat.widget.AppCompatImageView
                            style="@style/EditAccountActivity.Icon"
                            android:id="@+id/user_password_pattern_icon"
                            app:srcCompat="@drawable/outline_pattern_black_48"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintTop_toTopOf="@id/user_password_pattern_card_view"
                            app:layout_constraintBottom_toTopOf="@id/user_password_pattern_view"
                            app:layout_constraintStart_toStartOf="@id/user_password_pattern_card_view"/>

                        <!-- User Password PATTERN: Label -->
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/EditAccountActivity.Label"
                            android:id="@+id/user_password_pattern_label"
                            android:text="패턴 비밀번호"
                            app:layout_constraintBottom_toBottomOf="@id/user_password_pattern_icon"
                            app:layout_constraintStart_toEndOf="@id/user_password_pattern_icon"/>

                        <!-- User Password PATTERN: PatternView -->
                        <com.jojo.android.mwodeola.presentation.security.bottmSheet.PatternPasswordView
                            android:layout_width="240dp"
                            android:layout_height="240dp"
                            android:id="@+id/user_password_pattern_view"
                            app:dotsColor="@color/black"
                            app:dotsHighlightColor="@color/app_theme_color"
                            app:strokeColor="@color/app_theme_color"
                            app:layout_constraintTop_toBottomOf="@id/user_password_pattern_label"
                            app:layout_constraintBottom_toTopOf="@id/user_password_pattern_reset_button"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <!-- User Password PATTERN: Reset Button -->
                        <com.google.android.material.button.MaterialButton
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:id="@+id/user_password_pattern_reset_button"
                            android:text="다시 입력하기"
                            android:enabled="false"
                            app:layout_constraintTop_toBottomOf="@id/user_password_pattern_view"
                            app:layout_constraintBottom_toBottomOf="@id/user_password_pattern_card_view"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Memo: Container -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/EditAccountActivity.Container"
                        android:id="@+id/memo_container">

                        <!-- Memo: CardView -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.CardView"
                            android:id="@+id/memo_card_view"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <!-- Memo: Remove Button -->
                        <com.google.android.material.card.MaterialCardView
                            style="@style/EditAccountActivity.RemoveButton"
                            android:id="@+id/memo_container_remove_button"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/outline_close_24"
                                app:tint="@color/white"/>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Memo: Icon -->
                        <androidx.appcompat.widget.AppCompatImageView
                            style="@style/EditAccountActivity.Icon"
                            android:id="@+id/memo_icon"
                            android:padding="2dp"
                            app:srcCompat="@drawable/note_icon2"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintTop_toTopOf="@id/memo_card_view"
                            app:layout_constraintBottom_toTopOf="@id/memo_edt_layout"
                            app:layout_constraintStart_toStartOf="@id/memo_card_view"/>

                        <!-- Memo: Label -->
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/EditAccountActivity.Label"
                            android:id="@+id/memo_label"
                            android:text="메모"
                            app:layout_constraintBottom_toBottomOf="@id/memo_icon"
                            app:layout_constraintStart_toEndOf="@id/memo_icon"/>

                        <!-- Memo: TextInputLayout -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/EditAccountActivity.TextInputLayout"
                            android:layout_height="wrap_content"
                            android:id="@+id/memo_edt_layout"
                            app:endIconMode="clear_text"
                            app:layout_constraintTop_toBottomOf="@id/memo_icon"
                            app:layout_constraintBottom_toBottomOf="@id/memo_card_view"
                            app:layout_constraintStart_toStartOf="@id/memo_card_view"
                            app:layout_constraintEnd_toEndOf="@id/memo_card_view">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/EditAccountActivity.TextInputEditText"
                                android:layout_height="wrap_content"
                                android:id="@+id/memo_edt"
                                android:hint="메모 입력"
                                android:inputType="textMultiLine"
                                android:singleLine="false"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/detail_help_label"
                        android:text="항목을 추가하거나 삭제하려면\n 우측 상단의 버튼을 눌러주세요"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/bottom_sheet_contents_bottom_guideline"
                    app:layout_constraintGuide_end="120dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- BottomSheet: Top Gradation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_top_bar_gradient_white"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:id="@+id/btn_save"
        android:text="저장"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/selector_bottom_rectangle_button"
        android:enabled="false"
        android:elevation="5dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
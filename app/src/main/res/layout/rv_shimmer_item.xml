<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="18dp"
        android:id="@+id/shimmer_icon"
        android:background="@color/shimmer_item_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/shimmer_title"
        android:background="@color/shimmer_item_color"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shimmer_subtitle"
        app:layout_constraintStart_toEndOf="@id/shimmer_icon"/>

    <View
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:id="@+id/shimmer_subtitle"
        android:background="@color/shimmer_item_color"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/shimmer_title"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginEnd="24dp"
        android:background="#B2DFDB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/shimmer_subtitle"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

